---
import { NAVIGATION } from '../utils/constants';
import { trackCTAClick } from '../utils/analytics';

const currentPath = Astro.url.pathname;
---

<header class="bg-black text-white shadow-lg sticky top-0 z-50 border-b-2 border-yellow-400 w-full max-w-full">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-full">
    <div class="flex items-center justify-between h-14 sm:h-16 md:h-20 px-4 sm:px-6 lg:px-8 min-w-0 gap-2">
      <!-- Logo (shrink-0 and min-width ensure it never disappears) -->
      <a href="/" class="flex items-center shrink-0 min-w-[100px] sm:min-w-[120px] group" aria-label="Corpnce Technologies - Home">
        <img
          src="/images/Corpnce_Yellow.svg"
          alt="Corpnce Technologies"
          class="h-8 sm:h-9 md:h-10 w-auto max-w-[120px] sm:max-w-[140px] md:max-w-none transition-transform group-hover:scale-105"
          width="120"
          height="40"
          fetchpriority="high"
        />
      </a>

      <!-- Desktop Navigation (visible from md up) -->
      <div class="hidden md:flex items-center space-x-1">
        {NAVIGATION.map((item) => (
          <div class="relative group">
            {item.children ? (
              <>
                <button
                  class="px-4 py-2 text-white hover:text-yellow-400 font-semibold transition-colors flex items-center"
                  aria-expanded="false"
                  aria-haspopup="true"
                >
                  {item.name}
                  <svg
                    class="inline-block ml-1 w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </button>
                <div class="absolute left-0 mt-2 w-48 bg-gray-900 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border-2 border-yellow-400">
                  <div class="py-2">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="block px-4 py-2 text-sm text-white hover:bg-yellow-400 hover:text-black transition-colors"
                      >
                        {child.name}
                      </a>
                    ))}
                  </div>
                </div>
              </>
            ) : (
              <a
                href={item.href}
                class={`px-4 py-2 text-white hover:text-yellow-400 font-semibold transition-colors ${
                  currentPath === item.href ? 'text-yellow-400 border-b-2 border-yellow-400' : ''
                }`}
              >
                {item.name}
              </a>
            )}
          </div>
        ))}
      </div>

      <!-- CTA Button: only on large screens (laptops and up); hidden on small/medium -->
      <div class="hidden lg:block shrink-0 -ml-4">
        <a
          href="/contact"
          class="px-6 py-3 bg-yellow-400 text-black rounded-lg hover:bg-yellow-500 transition-all font-bold shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          onclick={`trackCTAClick('header_cta', 'header');`}
        >
          Enquire Now
        </a>
      </div>

      <!-- Mobile Menu Button (visible on small and medium; hidden on lg and up) -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-3 -mr-1 text-white hover:text-yellow-400 transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation (visible when menu open, below lg) -->
    <div
      id="mobile-menu"
      class="hidden lg:hidden pb-4 border-t-2 border-yellow-400 mt-2 overflow-x-hidden"
    >
      {NAVIGATION.map((item) => (
        <div class="py-2">
          {item.children ? (
            <>
              <button
                class="w-full text-left px-4 py-2 text-white hover:text-yellow-400 font-semibold flex items-center justify-between"
                onclick={`this.nextElementSibling.classList.toggle('hidden');`}
              >
                {item.name}
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </button>
              <div class="hidden pl-4 bg-gray-900 rounded-lg mt-2">
                {item.children.map((child) => (
                  <a
                    href={child.href}
                    class="block px-4 py-2 text-sm text-white hover:text-yellow-400 hover:bg-gray-800 rounded transition-colors"
                  >
                    {child.name}
                  </a>
                ))}
              </div>
            </>
          ) : (
            <a
              href={item.href}
              class={`block px-4 py-2 text-white hover:text-yellow-400 font-semibold transition-colors ${
                currentPath === item.href ? 'text-yellow-400' : ''
              }`}
            >
              {item.name}
            </a>
          )}
        </div>
      ))}
      <div class="px-4 pt-2">
        <a
          href="/contact"
          class="block w-full text-center px-6 py-3 bg-yellow-400 text-black rounded-lg hover:bg-yellow-500 transition-colors font-bold"
        >
          Enquire Now
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
    });
  }

  // Track CTA clicks
  if (typeof trackCTAClick === 'function') {
    document.querySelectorAll('a[href="/contact"]').forEach((link) => {
      link.addEventListener('click', () => {
        trackCTAClick('header_cta', 'header');
      });
    });
  }
</script>
