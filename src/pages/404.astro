---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" noindex={true}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="max-w-2xl mx-auto text-center">
      <div class="mb-8">
        <h1 class="text-8xl font-bold mb-4 text-black">
          <span class="text-yellow-400">404</span>
        </h1>
        <h2 class="text-3xl font-bold mb-6 text-black">Page Not Found</h2>
        <p class="text-xl text-gray-600 mb-8">
          The page you're looking for doesn't exist or has been moved.
        </p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="btn-primary inline-block"
        >
          Go to Homepage
        </a>
        <a
          href="/contact"
          class="btn-outline inline-block"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
