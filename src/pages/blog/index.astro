---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_CONFIG } from '../../utils/constants';
import { getCollection } from 'astro:content';
import readingTime from 'reading-time';

let posts = [];
try {
  const blogPosts = await getCollection('blog');
  posts = blogPosts
    .map((post) => {
      const stats = readingTime(post.body || '');
      return {
        ...post.data,
        slug: post.slug,
        readingTime: Math.ceil(stats.minutes),
      };
    })
    .sort((a, b) => new Date(b.publishedDate).getTime() - new Date(a.publishedDate).getTime());
} catch (e) {
  // Blog collection doesn't exist yet, use empty array
  console.log('Blog collection not found, using empty array');
}
---

<BaseLayout
  title={`Blog - ${SITE_CONFIG.title}`}
  description="Read our latest articles on data science, machine learning, AI, and technology trends."
>
  <!-- Hero Section -->
  <section class="bg-black text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Our <span class="text-yellow-400">Blog</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300">
          Educational content and thought leadership on data science, AI, and technology
        </p>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="max-w-4xl mx-auto">
      {posts.length > 0 ? (
        <div class="space-y-8">
          {posts.map((post) => (
            <article class="bg-white border-2 border-gray-200 rounded-xl overflow-hidden hover:border-yellow-400 hover:shadow-2xl transition-all duration-300">
              <div class="p-8">
                <div class="flex items-center text-sm text-gray-500 mb-4">
                  <time datetime={post.publishedDate.toISOString()}>
                    {post.publishedDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                  <span class="mx-2">•</span>
                  <span>{post.readingTime} min read</span>
                  {post.author && (
                    <>
                      <span class="mx-2">•</span>
                      <span>By {post.author}</span>
                    </>
                  )}
                </div>
                <h2 class="text-2xl font-bold mb-4 text-black">
                  <a
                    href={`/blog/${post.slug}`}
                    class="hover:text-yellow-400 transition-colors"
                  >
                    {post.title}
                  </a>
                </h2>
                <p class="text-gray-700 mb-4">{post.description}</p>
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-2">
                    {post.tags?.map((tag) => (
                      <span class="px-3 py-1 bg-yellow-100 text-black rounded-full text-sm font-semibold border border-yellow-300">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <a
                    href={`/blog/${post.slug}`}
                    class="text-black font-bold inline-flex items-center hover:text-yellow-400 transition-colors"
                  >
                    Read More
                    <svg
                      class="ml-2 w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="bg-yellow-50 border-2 border-yellow-200 p-12 rounded-xl text-center">
          <p class="text-gray-700 text-lg mb-4 font-semibold">No blog posts available yet.</p>
          <p class="text-gray-600">Check back soon for our latest articles!</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
