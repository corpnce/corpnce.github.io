---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG, COURSES, FORMSPREE_FORM_ID } from '../utils/constants';
const formAction = FORMSPREE_FORM_ID ? `https://formspree.io/f/${FORMSPREE_FORM_ID}` : '#';
---

<BaseLayout
  title={`Contact Us - ${SITE_CONFIG.title}`}
  description="Get in touch with Corpnce Technologies. Drop your enquiry and one of our executives will get in touch with you."
>
  <!-- Hero Section -->
  <section class="bg-black text-white py-12 sm:py-16 lg:py-24 w-full max-w-full overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-full">
      <div class="max-w-4xl mx-auto text-center min-w-0">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 sm:mb-6">
          Contact <span class="text-yellow-400">Us</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300">
          Drop your enquiry and one of our executives will get in touch with you
        </p>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 max-w-full">
    <div class="max-w-4xl mx-auto min-w-0">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold mb-6 text-black">Send us a Message</h2>
          <div id="form-message" class="hidden mb-4 p-4 rounded-lg"></div>
          <form
            action={formAction}
            method="POST"
            class="space-y-6"
            id="contact-form"
          >
            {!FORMSPREE_FORM_ID && (
              <div class="bg-amber-50 border-2 border-amber-300 p-4 rounded-lg mb-4">
                <p class="text-amber-800 text-sm font-semibold mb-2">⚠️ Form Setup Required</p>
                <p class="text-amber-700 text-sm">
                  To enable email submissions, set <code class="bg-amber-100 px-1 rounded">PUBLIC_FORMSPREE_FORM_ID</code> in GitHub repo Secrets. 
                  <a href="https://formspree.io" target="_blank" rel="noopener" class="text-amber-600 underline font-semibold">Get free Formspree account →</a>
                </p>
              </div>
            )}
            <div>
              <label for="name" class="block text-sm font-semibold text-black mb-2">
                Name <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all"
                placeholder="Your Name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-semibold text-black mb-2">
                Email <span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all"
                placeholder="your.email@example.com"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-semibold text-black mb-2">
                Phone <span class="text-red-500">*</span>
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all"
                placeholder="Your Phone"
              />
            </div>
            <div>
              <label for="course" class="block text-sm font-semibold text-black mb-2">
                Course Interest
              </label>
              <select
                id="course"
                name="course"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all"
              >
                <option value="">Select a course</option>
                {COURSES.map((course) => (
                  <option value={course.name}>{course.name}</option>
                ))}
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-semibold text-black mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all"
                placeholder="Your message..."
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full btn-primary"
              id="submit-btn"
              onclick="if(window.trackFormSubmit) window.trackFormSubmit('contact_page', 'contact');"
            >
              Submit Enquiry
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold mb-6 text-black">Get in Touch</h2>
          <div class="space-y-6">
            <div class="bg-gray-50 border-2 border-gray-200 p-6 rounded-xl">
              <h3 class="text-lg font-bold mb-3 text-black">
                {SITE_CONFIG.contact.address.main.label}
              </h3>
              <p class="text-gray-700 mb-4">
                {SITE_CONFIG.contact.address.main.street}
                <br />
                {SITE_CONFIG.contact.address.main.city}, {SITE_CONFIG.contact.address.main.state}{' '}
                {SITE_CONFIG.contact.address.main.zip}
                <br />
                {SITE_CONFIG.contact.address.main.country}
              </p>
              <a
                href={`https://maps.google.com/?q=${encodeURIComponent(
                  `${SITE_CONFIG.contact.address.main.street}, ${SITE_CONFIG.contact.address.main.city}`
                )}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-yellow-400 hover:text-yellow-500 font-semibold inline-flex items-center"
              >
                Get Directions →
              </a>
            </div>

            <div class="bg-gray-50 border-2 border-gray-200 p-6 rounded-xl">
              <h3 class="text-lg font-bold mb-3 text-black">Contact Details</h3>
              <div class="space-y-2 text-gray-700">
                <p>
                  <strong class="text-yellow-400">Phone:</strong>{' '}
                  <a
                    href={`tel:${SITE_CONFIG.contact.phone.india.replace(/\s/g, '')}`}
                    class="text-yellow-400 hover:text-yellow-500 font-semibold"
                  >
                    {SITE_CONFIG.contact.phone.india}
                  </a>
                </p>
                <p>
                  <strong class="text-yellow-400">Email:</strong>{' '}
                  <a
                    href={`mailto:${SITE_CONFIG.contact.email}`}
                    class="text-yellow-400 hover:text-yellow-500 font-semibold"
                  >
                    {SITE_CONFIG.contact.email}
                  </a>
                </p>
              </div>
            </div>

            <div class="bg-yellow-50 border-2 border-yellow-200 p-6 rounded-xl">
              <h3 class="text-lg font-bold mb-3 text-black">Business Hours</h3>
              <p class="text-gray-700">
                Monday - Friday: 9:00 AM - 6:00 PM IST
                <br />
                Saturday: 10:00 AM - 4:00 PM IST
                <br />
                Sunday: 10:00 AM - 4:00 PM IST
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Branches Section - Full Width -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6 text-black">Our Branches</h2>
        <div class="space-y-6">
          <!-- Main Branch -->
          <div class="bg-gray-50 border-2 border-gray-200 rounded-xl hover:border-yellow-400 transition-all overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
              <!-- Address Info -->
              <div class="p-6">
                <h3 class="text-lg font-bold mb-3 text-black">
                  {SITE_CONFIG.contact.address.main.label}
                </h3>
                <p class="text-gray-700 mb-4">
                  {SITE_CONFIG.contact.address.main.street}
                  <br />
                  {SITE_CONFIG.contact.address.main.city}, {SITE_CONFIG.contact.address.main.state}{' '}
                  {SITE_CONFIG.contact.address.main.zip}
                  <br />
                  {SITE_CONFIG.contact.address.main.country}
                </p>
                <div class="flex flex-col sm:flex-row gap-3">
                  <a
                    href={`https://maps.google.com/?q=${encodeURIComponent(
                      `${SITE_CONFIG.contact.address.main.street}, ${SITE_CONFIG.contact.address.main.city}`
                    )}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center px-4 py-2 bg-yellow-400 text-black rounded-lg hover:bg-yellow-500 transition-all font-semibold text-sm"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    View on Google Maps
                  </a>
                  <a
                    href={`tel:${SITE_CONFIG.contact.phone.india.replace(/\s/g, '')}`}
                    class="inline-flex items-center justify-center px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-all font-semibold text-sm"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    {SITE_CONFIG.contact.phone.india.replace('+91 ', '')}
                  </a>
                </div>
              </div>
              <!-- Google Map -->
              <div class="w-full h-64 lg:h-auto bg-gray-200">
                <iframe
                  src="https://www.google.com/maps?q=191+West+of+Chord+Road+2nd+Stage+Rajajinagar+Bengaluru+Karnataka+560086&output=embed&hl=en&z=15"
                  width="100%"
                  height="100%"
                  style="border:0; min-height: 256px;"
                  allowfullscreen=""
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                  class="w-full h-full"
                ></iframe>
              </div>
            </div>
          </div>

          <!-- Jayanagar Branch -->
          <div class="bg-gray-50 border-2 border-gray-200 rounded-xl hover:border-yellow-400 transition-all overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
              <!-- Address Info -->
              <div class="p-6">
                <h3 class="text-lg font-bold mb-3 text-black">Jayanagar Branch</h3>
                <p class="text-gray-700 mb-4">
                  2nd floor, 19/1, Model House St, S, Kariappa Rd,
                  <br />
                  Basavanagudi, Bengaluru, Karnataka 560004
                  <br />
                  India
                </p>
                <div class="flex flex-col sm:flex-row gap-3">
                  <a
                    href="https://maps.google.com/?q=2nd+floor,+19/1,+Model+House+St,+S,+Kariappa+Rd,+Basavanagudi,+Bengaluru,+Karnataka+560004"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center px-4 py-2 bg-yellow-400 text-black rounded-lg hover:bg-yellow-500 transition-all font-semibold text-sm"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    View on Google Maps
                  </a>
                  <a
                    href="tel:7019910931"
                    class="inline-flex items-center justify-center px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-all font-semibold text-sm"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    7019910931
                  </a>
                </div>
              </div>
              <!-- Google Map -->
              <div class="w-full h-64 lg:h-auto bg-gray-200">
                <iframe
                  src="https://www.google.com/maps?q=2nd+floor,+19/1,+Model+House+St,+S,+Kariappa+Rd,+Basavanagudi,+Bengaluru,+Karnataka+560004&output=embed"
                  width="100%"
                  height="100%"
                  style="border:0; min-height: 256px;"
                  allowfullscreen=""
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                  class="w-full h-full"
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  const form = document.getElementById('contact-form');
  const messageDiv = document.getElementById('form-message');
  const submitBtn = document.getElementById('submit-btn');

  if (form && formAction !== '#') {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Disable submit button
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';
      }

      // Show loading message
      if (messageDiv) {
        messageDiv.className = 'mb-4 p-4 rounded-lg bg-blue-50 border-2 border-blue-300';
        messageDiv.innerHTML = '<p class="text-blue-800 text-sm">Sending your message...</p>';
        messageDiv.classList.remove('hidden');
      }

      try {
        const formData = new FormData(form);
        
        const response = await fetch(formAction, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        const data = await response.json();

        if (response.ok) {
          // Success
          if (messageDiv) {
            messageDiv.className = 'mb-4 p-4 rounded-lg bg-green-50 border-2 border-green-300';
            messageDiv.innerHTML = '<p class="text-green-800 text-sm font-semibold">✓ Thank you! Your message has been sent successfully. We\'ll get back to you soon.</p>';
            messageDiv.classList.remove('hidden');
          }
          form.reset();
        } else {
          // Error from Formspree
          throw new Error(data.error || 'Failed to send message');
        }
      } catch (error) {
        // Network or other error
        if (messageDiv) {
          messageDiv.className = 'mb-4 p-4 rounded-lg bg-red-50 border-2 border-red-300';
          messageDiv.innerHTML = `<p class="text-red-800 text-sm font-semibold">✗ Error: ${error.message || 'Failed to send message. Please try again or contact us directly.'}</p>`;
          messageDiv.classList.remove('hidden');
        }
      } finally {
        // Re-enable submit button
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Submit Enquiry';
        }
      }
    });
  }
</script>
