---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG } from '../utils/constants';
---

<BaseLayout
  title={`Gallery - ${SITE_CONFIG.title}`}
  description="View photos from our training sessions, events, and facilities at Corpnce Technologies."
>
  <!-- Hero Section -->
  <section class="bg-black text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          <span class="text-yellow-400">Gallery</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300">
          Photos from our training sessions, events, and facilities
        </p>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="max-w-6xl mx-auto">
      <div class="bg-yellow-50 border-2 border-yellow-200 p-12 rounded-xl text-center">
        <div class="mb-6">
          <svg class="w-24 h-24 mx-auto text-yellow-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <p class="text-gray-700 text-lg mb-4 font-semibold">Gallery coming soon!</p>
        <p class="text-gray-600 mb-6">
          We're working on adding photos from our training sessions and events. Check back soon!
        </p>
        <p class="text-sm text-gray-500">
          Images should be placed in <code class="bg-yellow-100 px-2 py-1 rounded text-black">public/images/gallery/</code>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
