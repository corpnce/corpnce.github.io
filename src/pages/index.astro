            <button class="w-2.5 h-2.5 rounded-full bg-black" aria-label="Slide 1"></button>
            <button class="w-2.5 h-2.5 rounded-full bg-gray-300 hover:bg-black transition-colors" aria-label="Slide 2"></button>
