        </div>
      </div>
    </div>
    
    <!-- Creative Diagonal Transition -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden pointer-events-none">
      <div class="relative w-full h-32">
        <!-- Diagonal Cut with Yellow Accent -->
        <div class="absolute bottom-0 left-0 w-full h-full bg-white"></div>
      </div>
    </div>
  </section>

  <!-- Hero typing effect -->
  <script>
    (function () {
      const phrases = ['ordinary', 'layoffs', 'limits'];
      const el = document.getElementById('hero-typing');
      const cursor = document.getElementById('hero-typing-cursor');
      if (!el || !cursor) return;

      const typeSpeed = 140;
      const deleteSpeed = 90;
      const pauseAfterType = 3500;
      const pauseAfterDelete = 1000;

      let phraseIndex = 0;
      let charIndex = 0;
      let isDeleting = false;
      let timeout = null;

      function tick() {
        clearTimeout(timeout);
        const phrase = phrases[phraseIndex];
        if (isDeleting) {
          charIndex--;
          el.textContent = phrase.slice(0, charIndex);
          if (charIndex === 0) {
            isDeleting = false;
            phraseIndex = (phraseIndex + 1) % phrases.length;
            timeout = setTimeout(tick, pauseAfterDelete);
          } else {
            timeout = setTimeout(tick, deleteSpeed);
          }
        } else {
          charIndex++;
          el.textContent = phrase.slice(0, charIndex);
          if (charIndex === phrase.length) {
            isDeleting = true;
            timeout = setTimeout(tick, pauseAfterType);
          } else {
            timeout = setTimeout(tick, typeSpeed);
          }
        }
      }

      // Start after a short delay so hero is visible
      timeout = setTimeout(tick, 400);
    })();
  </script>

