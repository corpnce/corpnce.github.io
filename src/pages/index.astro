    <script>
      const form = document.getElementById('job-search-form');
      const keywordInput = document.getElementById('job-keyword');
      const locationInput = document.getElementById('job-location');
      const results = document.getElementById('job-results');
      const emptyState = document.getElementById('job-empty');
      const keywordNote = document.getElementById('job-keyword-note');
      const locationNote = document.getElementById('job-location-note');
      const errorState = document.getElementById('job-error');
      const jobSection = document.getElementById('job-search');
      let jobsLoaded = false;

      const renderJobs = (jobs) => {
        if (!results) return;
        results.innerHTML = '';
        if (!jobs || jobs.length === 0) {
          errorState?.classList.add('hidden');
          keywordNote?.classList.add('hidden');
          locationNote?.classList.add('hidden');
          emptyState?.classList.remove('hidden');
          return;
        }
        emptyState?.classList.add('hidden');
        keywordNote?.classList.add('hidden');
        locationNote?.classList.add('hidden');
        errorState?.classList.add('hidden');
        jobs.slice(0, 10).forEach((job) => {
          const card = document.createElement('a');
          card.href = job.url;
          card.target = '_blank';
          card.rel = 'noreferrer';
          card.className =
            'block bg-white border border-gray-200 rounded-xl p-4 sm:p-5 hover:border-yellow-400 hover:shadow-lg transition-all min-w-0';
          card.innerHTML = `
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 min-w-0">
              <div class="min-w-0 flex-1">
                <h3 class="text-base sm:text-lg font-bold text-black break-words">${job.title}</h3>
                <p class="text-sm text-gray-600 truncate sm:whitespace-normal">${job.company_name} • ${job.candidate_required_location}</p>
              </div>
              <span class="text-xs font-semibold px-3 py-1 rounded-full bg-yellow-100 text-black shrink-0 w-fit">
                ${job.job_type || 'Full-time'}
              </span>
            </div>
          `;
          results.appendChild(card);
        });
      };

      const fetchJobs = async (keyword, location) => {
        if (!results) return;
        results.innerHTML =
          '<div class="text-center text-gray-500">Loading jobs...</div>';
        try {
          const search = (keyword || 'data scientist').trim();
          const url = `https://remotive.com/api/remote-jobs${search ? `?search=${encodeURIComponent(search)}` : ''}`;
          const response = await fetch(url, { headers: { Accept: 'application/json' } });
          if (!response.ok) throw new Error('API error');
          const data = await response.json();
          const jobs = data?.jobs || [];
          const normalizedLocation = (location || '').trim().toLowerCase();
          const normalizedLocationFixed =
            normalizedLocation === 'banglaore' ? 'bangalore' : normalizedLocation;
          const filtered = normalizedLocation
            ? jobs.filter((job) => {
                const locationText = String(job.candidate_required_location || '').toLowerCase();
                return (
                  locationText.includes(normalizedLocationFixed) ||
                  locationText.includes('remote') ||
                  locationText.includes('worldwide') ||
                  locationText.includes('anywhere')
                );
              })
            : jobs;
          keywordNote?.classList.add('hidden');
          if (normalizedLocation && filtered.length === 0 && jobs.length > 0) {
            locationNote?.classList.remove('hidden');
            renderJobs(jobs);
          } else {
            locationNote?.classList.add('hidden');
            renderJobs(filtered);
          }
        } catch (error) {
          results.innerHTML = '<div class="text-center text-gray-600">Unable to load jobs from Remotive. <a href="https://remotive.com/remote-jobs/data" class="text-yellow-600 underline" target="_blank" rel="noreferrer">Browse Data jobs on Remotive</a> · <a href="https://www.arbeitnow.com/" class="text-yellow-600 underline" target="_blank" rel="noreferrer">Arbeitnow</a></div>';
          emptyState?.classList.add('hidden');
          keywordNote?.classList.add('hidden');
          locationNote?.classList.add('hidden');
          errorState?.classList.add('hidden');
        }
      };

      form?.addEventListener('submit', (event) => {
        event.preventDefault();
        fetchJobs(keywordInput?.value || '', locationInput?.value || '');
      });

      const initJobs = () => {
        if (jobsLoaded) return;
        jobsLoaded = true;
        fetchJobs('data scientist', '');
      };

      if ('IntersectionObserver' in window && jobSection) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              initJobs();
              observer.disconnect();
            }
          });
        }, { threshold: 0.2 });
        observer.observe(jobSection);
      } else {
        initJobs();
      }
    </script>
