                        class="w-full bg-gradient-to-t from-gray-500 to-gray-400 rounded-t-lg transition-all duration-1000 ease-out"
                        style="height: 0%;"
                        id="industry-bar"
                      ></div>
                    </div>
                  </div>
                  <div class="text-center min-h-[60px] flex flex-col justify-start">
                    <div class="text-2xl md:text-3xl font-bold text-gray-600 h-9 md:h-10 flex items-center justify-center" id="industry-value">0%</div>
                    <div class="text-xs md:text-sm text-gray-500 mt-1">Industry Average</div>
                  </div>
                </div>

                <!-- Corpnce Students Bar -->
                <div class="flex flex-col items-center gap-2 sm:gap-3 min-w-0">
                  <div class="relative w-14 sm:w-16 md:w-20 lg:w-24 h-48 sm:h-56 md:h-64 flex items-end">
                    <div class="w-full h-full bg-yellow-400/20 rounded-t-lg relative overflow-visible flex items-end">
                      <div 
                        class="w-full bg-gradient-to-t from-yellow-500 to-yellow-400 rounded-t-lg transition-all duration-1000 ease-out shadow-lg"
                        style="height: 0%;"
                        id="corpnce-bar"
                      ></div>
                      <!-- Badge at top of bar -->
                      <div class="absolute -top-6 left-1/2 transform -translate-x-1/2 px-3 py-1 bg-yellow-400 text-black text-xs font-bold rounded-full whitespace-nowrap z-10">
                        +25% Better
                      </div>
                    </div>
                  </div>
                  <div class="text-center min-h-[60px] flex flex-col justify-start">
                    <div class="text-2xl md:text-3xl font-bold text-yellow-500 h-9 md:h-10 flex items-center justify-center" id="corpnce-value">0%</div>
                    <div class="text-xs md:text-sm text-gray-500 mt-1">Corpnce Students</div>
                  </div>
                </div>
              </div>

              <!-- Comparison Text -->
              <div class="mt-8 text-center">
                <p class="text-base md:text-lg text-gray-700">
                  <span class="font-bold text-yellow-400">25% Higher TQ</span> than industry average
                </p>
                <p class="text-sm text-gray-600 mt-2">Proven through our unique TQ assessment methodology</p>
                <h3 class="text-xl md:text-2xl font-bold text-black mt-6 mb-2">Technology Quotient Comparison</h3>
              </div>

              <script>
                let animationInterval = null;
                let industryTimer = null;
                let corpnceTimer = null;

                // Animate bars on page load
                const animateBars = () => {
                  const industryBar = document.getElementById('industry-bar');
                  const corpnceBar = document.getElementById('corpnce-bar');
                  const industryValue = document.getElementById('industry-value');
                  const corpnceValue = document.getElementById('corpnce-value');

                  if (industryBar && corpnceBar && industryValue && corpnceValue) {
                    // Reset bars to 0%
                    industryBar.style.height = '0%';
                    corpnceBar.style.height = '0%';
                    industryValue.textContent = '0%';
                    corpnceValue.textContent = '0%';

                    // Clear any existing timers
                    if (industryTimer) clearInterval(industryTimer);
                    if (corpnceTimer) clearInterval(corpnceTimer);

                    // Set industry average to 75% (baseline)
                    const industryHeight = 75;
                    // Corpnce is 25% better = 100% (or 125% of industry = 100%)
                    const corpnceHeight = 100;

                    // Animate industry bar
                    setTimeout(() => {
                      industryBar.style.height = industryHeight + '%';
                      let current = 0;
                      const increment = industryHeight / 30;
                      industryTimer = setInterval(() => {
                        current += increment;
                        if (current >= industryHeight) {
                          current = industryHeight;
                          clearInterval(industryTimer);
                        }
                        if (industryValue) {
                          industryValue.textContent = Math.round(current) + '%';
                        }
                      }, 33);
                    }, 200);

                    // Animate Corpnce bar (slightly delayed)
                    setTimeout(() => {
                      corpnceBar.style.height = corpnceHeight + '%';
                      let current = 0;
                      const increment = corpnceHeight / 30;
                      corpnceTimer = setInterval(() => {
                        current += increment;
                        if (current >= corpnceHeight) {
                          current = corpnceHeight;
                          clearInterval(corpnceTimer);
                        }
                        if (corpnceValue) {
                          corpnceValue.textContent = Math.round(current) + '%';
                        }
                      }, 33);
                    }, 400);
                  }
                };

                // Start continuous animation loop
                const startAnimationLoop = () => {
                  // Initial animation
                  animateBars();
                  
                  // Repeat every 5 seconds (5000ms)
                  animationInterval = setInterval(() => {
                    animateBars();
                  }, 5000);
                };

                // Run animation when section is visible
                if (typeof window !== 'undefined') {
                  // Use Intersection Observer for better performance
                  const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                      if (entry.isIntersecting) {
                        startAnimationLoop();
                        observer.unobserve(entry.target);
                      } else {
                        // Stop animation when section is not visible
                        if (animationInterval) {
                          clearInterval(animationInterval);
                          animationInterval = null;
                        }
                        if (industryTimer) clearInterval(industryTimer);
                        if (corpnceTimer) clearInterval(corpnceTimer);
                      }
                    });
                  }, { threshold: 0.1 });

                  const container = document.getElementById('tq-chart-container');
                  if (container) {
                    observer.observe(container);
                  } else {
                    // Fallback: try after DOM is ready
                    if (document.readyState === 'loading') {
                      document.addEventListener('DOMContentLoaded', () => {
                        const container = document.getElementById('tq-chart-container');
                        if (container) {
                          observer.observe(container);
                        } else {
                          setTimeout(startAnimationLoop, 500);
                        }
                      });
                    } else {
                      setTimeout(startAnimationLoop, 500);
                    }
                  }
                }
              </script>
