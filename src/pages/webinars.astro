---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG, FORMSPREE_FORM_ID } from '../utils/constants';

const contactFormAction = FORMSPREE_FORM_ID ? `https://formspree.io/f/${FORMSPREE_FORM_ID}` : '#';
---

<BaseLayout
  title={`Free Webinars - ${SITE_CONFIG.title}`}
  description="Join Corpnce's free webinars on Data Science, AI, Machine Learning, and more. Learn from industry experts and advance your career. Register now!"
>
  <!-- Hero Section - Scaler Style Layout -->
  <section class="bg-black text-white py-12 lg:py-16 relative overflow-hidden min-h-[600px] lg:min-h-[700px] flex items-center">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 20px, rgba(255, 215, 0, 0.1) 20px, rgba(255, 215, 0, 0.1) 40px);"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full">
      <div class="grid lg:grid-cols-2 gap-8 items-start max-w-7xl mx-auto min-h-[500px] lg:min-h-[600px]">
        
        <!-- Left Side - Topic and Event Details -->
        <div class="relative z-10 flex flex-col h-full justify-between">
          <div>
            <!-- Free Guidance Badge -->
            <div class="mb-6">
              <span class="inline-block bg-yellow-400 text-black px-6 py-2 rounded-full text-sm font-bold uppercase tracking-wide">
                Free Guidance
              </span>
            </div>

            <!-- Large Topic Speech Bubble -->
            <div class="mb-6">
              <div class="bg-gray-50 text-black p-8 rounded-2xl shadow-2xl transform -rotate-1 hover:rotate-0 transition-transform duration-300">
                <p class="text-3xl md:text-4xl lg:text-5xl font-black leading-tight">
                  Want to build a career in <br />
                  <span class="text-3xl md:text-4xl lg:text-5xl">Data Science?</span>
                </p>
              </div>
            </div>

            <!-- Calendar Format Date/Time -->
            <div class="bg-gray-900 border-t-2 border-yellow-400 p-4 rounded-lg mb-6">
              <div class="flex items-center gap-4">
                <!-- Calendar Icon -->
                <div class="flex-shrink-0">
                  <div class="w-16 h-16 bg-yellow-400 rounded-lg flex flex-col items-center justify-center text-black">
                    <div class="text-xs font-bold uppercase">MAR</div>
                    <div class="text-2xl font-black">15</div>
                  </div>
                </div>
                <!-- Date and Time Details -->
                <div class="flex-1">
                  <div class="text-yellow-400 text-xs font-bold uppercase tracking-widest mb-1">CORPNCE MASTERCLASS</div>
                  <div class="text-white text-sm md:text-base font-semibold">
                    THURSDAY, MARCH 15, 2026
                  </div>
                  <div class="text-gray-300 text-sm">
                    7:00 PM - 9:00 PM (IST)
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Registration Form - Now inside left column -->
          <div class="mt-auto">
            <div class="bg-white rounded-xl shadow-2xl p-6 border-2 border-yellow-400">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-black text-black">Register Now!</h3>
                <div class="text-xs text-gray-600 font-semibold">
                  Starts in <span class="text-yellow-400 font-bold">23h 37m</span>
                </div>
              </div>
              
              <form action={contactFormAction} method="POST" class="space-y-4">
                <input type="hidden" name="_subject" value="Webinar Registration - Quick Form" />
                <input type="hidden" name="_next" value={`${import.meta.env.SITE || 'https://corpnce.github.io'}/webinars?success=true`} />
                
                <div>
                  <label for="quick-phone" class="block text-sm font-semibold text-gray-700 mb-2">
                    Mobile Number *
                  </label>
                  <div class="flex gap-2">
                    <select class="px-3 py-3 bg-gray-100 border border-gray-300 rounded-lg text-gray-700 text-sm focus:outline-none focus:border-yellow-400">
                      <option>+91</option>
                      <option>+1</option>
                    </select>
                    <input
                      type="tel"
                      id="quick-phone"
                      name="phone"
                      required
                      class="flex-1 px-4 py-3 border border-gray-300 rounded-lg text-gray-900 focus:outline-none focus:border-yellow-400"
                      placeholder="9876543210"
                    />
                  </div>
                </div>

                <div class="text-xs text-gray-600 text-center">
                  <span class="font-semibold text-yellow-400">1.7k+</span> learners already registered.
                </div>

                <button
                  type="submit"
                  class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-4 px-6 rounded-lg transition-colors shadow-lg"
                >
                  REGISTER FOR FREE
                </button>

                <div class="text-xs text-gray-600 space-y-2">
                  <label class="flex items-start gap-2 cursor-pointer">
                    <input type="checkbox" required class="mt-1" />
                    <span>I agree to the Terms of Use, Privacy Policy, Cookie usage and all applicable laws and regulations.</span>
                  </label>
                  <label class="flex items-start gap-2 cursor-pointer">
                    <input type="checkbox" class="mt-1" />
                    <span>I agree to receive the OTPs & updates via text SMS and WhatsApp</span>
                  </label>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Right Side - Speaker Image -->
        <div class="relative" style="height: fit-content;">
          <div class="w-full">
            <!-- Speaker Image - Constrained Height to match speech bubble (184px) -->
            <div class="bg-black rounded-2xl p-2 overflow-hidden" style="height: 184px !important; max-height: 184px !important; min-height: 184px !important; width: 100%; flex-shrink: 0;">
              <div class="w-full rounded-xl relative overflow-hidden bg-black" style="height: 180px !important; max-height: 180px !important; min-height: 180px !important;">
                <img
                  src="/images/webinar-instructor.png"
                  alt="Webinar Instructor - Industry Expert"
                  class="rounded-xl"
                  style="width: 100% !important; height: 180px !important; max-height: 180px !important; min-height: 180px !important; object-fit: cover !important; object-position: center; display: block;"
                  onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                />
                <!-- Fallback placeholder if image doesn't exist -->
                <div class="w-full bg-gray-900 rounded-xl flex items-center justify-center hidden" style="height: 180px !important; max-height: 180px !important; min-height: 180px !important;">
                  <div class="text-center text-gray-400 z-10">
                    <svg class="w-16 h-16 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <p class="text-sm font-bold">Instructor Image</p>
                    <p class="text-xs mt-1">Add image: public/images/webinar-instructor.png</p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Instructor Info Below Image -->
            <div class="bg-gray-900 border-t-2 border-yellow-400 p-4 rounded-lg mt-4">
